.header {
  background: white;
  height: 120rpx;
  border: 1px solid var(--themeColor);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.header .logo {
  height: 70rpx;
}

.header .logo .pic {
  height: 100%;
}

.header .sign {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--themeColor);
}
