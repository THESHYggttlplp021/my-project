@charset "UTF-8";
.banner {
  padding-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.scrollNav .more {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  align-items: center;
}

.scrollNav .more .title {
  font-size: 34rpx;
  font-weight: 700;
}

.scrollNav .more .readMore {
  color: var(--descColor);
  font-size: 30rpx;
}

.scrollNav .more .readMore .gt {
  padding-left: 20rpx;
  font-size: 32rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}

.scrollNav scroll-view .item .pic {
  width: 250rpx;
  height: 300rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.scrollNav scroll-view .item .pic .zhuanxiang {
  position: absolute;
  background: #ffa600;
  padding: 10rpx 20rpx;
  font-size: 34rpx;
  border-radius: 30rpx;
  color: white;
}

.scrollNav scroll-view .item .text {
  font-size: 34rpx;
  color: var(--globalColor);
  padding-top: 20rpx;
  width: 260rpx;
  /*单行文本溢出省略号显示*/
  overflow: hidden;
  /*溢出部分隐藏*/
  text-overflow: ellipsis;
  /*text-overflow属性规定了当文本溢出包含元素时所发生的事情，溢出部分用省略号显示*/
  white-space: nowrap;
  /*不会自动换行，除非手动添加换行标签*/
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-right: 0;
}

.scrollNav scroll-view .sign {
  display: flex;
}

.scrollNav scroll-view .sign .type {
  width: 120rpx;
  overflow: hidden;
  /*溢出部分隐藏*/
  text-overflow: ellipsis;
  /*text-overflow属性规定了当文本溢出包含元素时所发生的事情，溢出部分用省略号显示*/
  white-space: nowrap;
  /*不会自动换行，除非手动添加换行标签*/
  font-size: 26rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
  text-align: center;
  padding: 5rpx;
  background: var(--lightColor);
  border-radius: 50rpx;
  color: var(--descColor);
}

.scrollNav scroll-view .sign .type:first-child {
  margin-left: 0;
}

.scrollNav scroll-view .sign .type:last-child {
  margin-right: 0;
}
