.productNav{
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
  height: 100%;
}
.left{
  width: 25%;
  font-size: 30rpx;
  background-color: #f4f4f4;
}
.left view{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.selected{
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  white-space: nowrap;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  white-space: nowrap;
  padding-left: 20rpx;
}
.right{
  width:75%;
  margin: 0;
}
